<div class="center">
  <h2>Your Order History</h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Price</th>
    <th class="center">Customer</th>
    <th class="center">Date Ordered</th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td class="center"><%= number_to_currency(order.profile.price) %></td>
      <td class="center"><%= order.buyer.first_name %> <%= order.buyer.last_name %></td>
      <td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
    </tr>
  <% end %>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_profile_path, class: "btn btn-link" %>
<% end %>